{
    "name": "deggo-mcp",
    "version": "1.0.0",
    "description": "AI-Powered Payment Integration for Senegalese Mobile Money Services",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "deggo-mcp": "dist/server.js"
    },
    "scripts": {
        "build": "npm run clean && tsc",
        "build:watch": "tsc --watch",
        "dev": "ts-node src/server.ts",
        "start": "node dist/server.js",
        "test": "jest",
        "test:integration": "jest tests/integration --testTimeout=30000",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "clean": "rm -rf dist coverage",
        "typecheck": "tsc --noEmit",
        "validate": "npm run typecheck && npm run lint && npm run test",
        "changelog": "node scripts/changelog.js",
        "version": "npm run changelog && git add CHANGELOG.md",
        "preversion": "npm run validate",
        "postversion": "git push && git push --tags",
        "prepublishOnly": "npm run build",
        "publish:beta": "npm publish --tag beta",
        "publish:latest": "npm publish --tag latest",
        "release": "npm run validate && npm version patch && npm run publish:latest",
        "release:minor": "npm run validate && npm version minor && npm run publish:latest",
        "release:major": "npm run validate && npm version major && npm run publish:latest"
    },
    "keywords": [
        "mcp",
        "senegal",
        "mobile-money",
        "orange-money",
        "wave",
        "payments",
        "ai",
        "assistant"
    ],
    "author": "Deggo MCP Contributors",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jmndao/deggo-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/jmndao/deggo-mcp/issues"
    },
    "homepage": "https://github.com/jmndao/deggo-mcp#readme",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.5.0",
        "axios": "^1.6.0",
        "zod": "^3.22.0",
        "winston": "^3.11.0",
        "dotenv": "^16.3.0",
        "node-rsa": "^1.1.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.8.0",
        "@types/node-rsa": "^1.1.4",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "eslint": "^8.50.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.2.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ]
}